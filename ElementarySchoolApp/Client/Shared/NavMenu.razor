<div class="top-row pl-4 navbar navbar-dark">
    <a class="navbar-brand" href="">ElementarySchoolApp</a>
    <button class="navbar-toggler" @onclick="ToggleNavMenu">
        <span class="navbar-toggler-icon"></span>
    </button>
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <ul class="nav flex-column">
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="oi oi-home" aria-hidden="true"></span> Home
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="listofpersons">
                <span class="oi oi-plus" aria-hidden="true"></span> Personal
            </NavLink>
        </li>

        <AuthorizeView Roles="@StaticDetails.Role_Admin">
            <Authorized>
                <li class="nav-item px-3">
                    <NavLink class="nav-link" href="classroom/add">
                        <span class="oi oi-plus" aria-hidden="true"></span> Add room
                    </NavLink>
                </li>
            </Authorized>
        </AuthorizeView>

        <li class="nav-item px-3">
            <NavLink class="nav-link" href="listoflessons">
                <span class="oi oi-list-rich" aria-hidden="true"></span> Lessons
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="listofgroup">
                <span class="oi oi-list-rich" aria-hidden="true"></span> Groups
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="classroom/search">
                <span class="oi oi-list-rich" aria-hidden="true"></span> Class rooms search
            </NavLink>
        </li>

        <AuthorizeView Roles="@StaticDetails.Role_Admin">
            <Authorized>
                <li class="nav-item px-3">
                    <NavLink class="nav-link" href="users">
                        <span class="oi oi-list-rich" aria-hidden="true"></span> Users
                    </NavLink>
                </li>
            </Authorized>
        </AuthorizeView>
        
    </ul>
</div>

@code {
    private bool collapseNavMenu = true;

    private string NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
